<h1>All Recipes</h1>

<h3><%= link_to "Create a new recipe", new_recipe_path,  class: 'btn btn-outline-primary w-100 mt-3' %></h3>

<ul class="list-group">
<% @recipes.each do |recipe| %>
  <li class="list-group-item">
    <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
    <small><%= "serves #{recipe.yield}" %></small>
  </li>
<% end %>
</ul>
