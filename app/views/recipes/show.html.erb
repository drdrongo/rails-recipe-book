<h1><%= @recipe.name %></h1>
<p>Serves <%= @recipe.yield %></p>

<p><%= @recipe.cuisine %> cuisine</p>

<h4>Equipment</h4>
<%= simple_format(@recipe.equipment) %>

<h4>Ingredients</h4>
<%= simple_format(@recipe.ingredients) %>

<h4>Instructions</h4>
<%= simple_format(@recipe.instructions) %>

<div class="button-box row w-100 m-0">
  <%= link_to "Update recipe", edit_recipe_path,  class: 'btn btn-outline-success col-6'%>
  <%= link_to "Delete recipe", recipe_path(@recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?'}, class: 'btn btn-outline-danger col-6'%>
</div>

<%= link_to "Back to home", recipes_path,  class: 'btn btn-outline-primary w-100 mt-3'%>
